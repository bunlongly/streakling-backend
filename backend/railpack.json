{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "steps": {
    "install": {
      "commands": [
        "COPY:backend/package*.json backend/",
        "npm --prefix backend ci"
      ]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": [
        "COPY:backend .",
        "npm --prefix backend run build"
      ]
    }
  },
  "deploy": {
    "startCommand": "npm --prefix backend run start"
  }
}
